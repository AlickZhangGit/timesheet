{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": false,
        "noUnusedLocals": false,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowJs": true
    },
    "include": [
        "src/**/*.ts"
      ]
}